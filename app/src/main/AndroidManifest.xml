<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navdeep_bilin_myruns5">

    <!-- Features -->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Android 13+ scoped media read -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Pre-Android 13 legacy external storage read -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Navdeep_Bilin_MyRuns5">

        <!-- Launcher activity: hosts tabs (Start/History/Settings) -->
        <activity
            android:name="com.example.navdeep_bilin_myruns5.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Navdeep_Bilin_MyRuns5">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.navdeep_bilin_myruns5.MapActivity"
            android:exported="false"
            android:label="Maps"
            android:launchMode="singleTop" />

        <activity
            android:name="com.example.navdeep_bilin_myruns5.ManualEntryActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Navdeep_Bilin_MyRuns5" />


        <!-- Profile screen (navigated to from Settings) -->
        <activity
            android:name="com.example.navdeep_bilin_myruns5.ProfileActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Navdeep_Bilin_MyRuns5" />

        <!-- Display entry screen (MR3) -->
        <activity
            android:name="com.example.navdeep_bilin_myruns5.DisplayEntryActivity"
            android:exported="false"
            android:label="Entry Details"
            android:theme="@style/Theme.Navdeep_Bilin_MyRuns5" />

        <!-- Display GPS entry screen (MR4) -->
        <activity
            android:name="com.example.navdeep_bilin_myruns5.DisplayGpsActivity"
            android:exported="false"
            android:label="Entry Details"
            android:theme="@style/Theme.Navdeep_Bilin_MyRuns5" />


        <!-- FileProvider for camera output Uris -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <service
            android:name=".service.TrackingService"
            android:exported="false"
            android:foregroundServiceType="location"/>


    </application>
</manifest>
